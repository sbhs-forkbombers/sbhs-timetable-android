<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/geofencing_prefs_title" />
    <CheckBoxPreference
        android:key="geofencing_enable"
        android:defaultValue="false"
        android:title="@string/pref_geofence_enable"
        android:summaryOn="@string/pref_geofence_enable_on"
        android:summaryOff="@string/pref_geofence_enable_off" />

    <RingtonePreference
        android:key="geofence_sound"
        android:showSilent="true"
        android:showDefault="false"
        android:title="@string/pref_geofence_sound"
        android:dependency="geofencing_enable"
        android:ringtoneType="alarm|notification"/>

    <CheckBoxPreference
        android:key="geofence_vibrate"
        android:defaultValue="true"
        android:title="@string/pref_geofence_vibrate"
        android:dependency="geofencing_enable" />

</PreferenceScreen>
