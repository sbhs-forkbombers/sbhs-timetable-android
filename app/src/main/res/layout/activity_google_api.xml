<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.sbhstimetable.sbhs_timetable_android.debug.GoogleApiActivity">

    <include layout="@layout/layout_toolbar"
             android:id="@+id/include"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/toolbar"
        android:text="Start connection"
        android:id="@+id/initconn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/initconn"
        android:text="Get GoogleApiClient"
        android:id="@+id/getapi"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/getapi"
        android:text="Reset notification date"
        android:id="@+id/resetdate"/>

    <Button android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/resetdate"
            android:text="Force notification"
            android:id="@+id/forcenotify" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/forcenotify"
        android:text="Check connection status"
        android:id="@+id/checkstatus"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/checkstatus">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

            <TextView android:id="@+id/sikui"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:text="@string/sikui"
                      android:layout_alignParentTop="true"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"/>

            <TextView android:id="@+id/githash"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_horizontal"
                      android:layout_below="@id/sikui"
                      android:text="@string/GIT_REV" />

            <TextView android:id="@+id/status"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/githash"
                      android:layout_marginLeft="16dp"
                      android:layout_marginRight="16dp"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
